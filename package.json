{
  "name": "@protorians/widgets",
  "version": "0.1.7-beta.0",
  "description": "Create your web user interfaces with widgets",
  "main": "./~cjs/index.js",
  "module": "./~esm/index.js",
  "scripts": {
    "dev": "tsc --watch -p esm.tsconfig.json",
    "build": "rm -rf ~esm ~cjs && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p esm.tsconfig.json && ts-add-js-extension --dir=~esm",
    "build:cjs": "tsc -p cjs.tsconfig.json && ts-add-js-extension --dir=~cjs",
    "prepare:major": "npm version premajor --preid=beta",
    "prepare:minor": "npm version preminor --preid=beta",
    "prepare:patch": "npm version prepatch --preid=beta",
    "prepare:prerelease": "npm version prerelease",
    "fix:esm": "ts-add-js-extension --dir=~esm",
    "fix:cjs": "ts-add-js-extension --dir=~cjs"
  },
  "exports": {
    ".": {
      "require": "./~cjs/index.js",
      "import": "./~esm/index.js"
    }
  },
  "keywords": [
    "protorians",
    "widget",
    "library"
  ],
  "author": "Y. Yannick GOBOU",
  "repository": {
    "type": "git",
    "url": "https://github.com/protorians/widgets.git",
    "directory": "source"
  },
  "license": "ISC",
  "dependencies": {
    "@protorians/core": "0.1.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "user-agent-data-types": "^0.4.2"
  }
}
