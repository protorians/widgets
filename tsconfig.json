{
  "compilerOptions": {

    "module": "ESNext",
    "target": "es2020",
    "moduleResolution": "node",
    
    "noImplicitAny": false,
    "allowJs": true,
    "removeComments": false,
    "declaration": true,
    "preserveConstEnums": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "strict": true,
    "rootDir": "./source"
  },
  "exclude": [
    "node_modules",
    "~cjs",
    "~esm",
  ],
  "include": [
    "./source"
  ]
}