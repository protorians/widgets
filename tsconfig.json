{
  "compilerOptions": {

    "module": "ESNext",
    "target": "es2020",
    "moduleResolution": "node",
    
    "declaration": true,

    "noImplicitAny": false,
    "allowJs": true,
    "removeComments": false,
    "declarationMap": true,
    "inlineSources": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "~cjs",
    "~esm",
  ],
  "include": [
    "./"
  ]
}